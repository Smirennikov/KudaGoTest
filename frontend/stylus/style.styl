@import '../fonts/fonts.css'
:root
  --pink #ea6969
  --darkBlue #488999
.flex
  display flex
.container
    max-width 1024px
    margin auto

.kudaGo-tabs
  margin-top 35px
.tab
  background 0
  color #fff
  font-size 23px
  margin-right 15px
  padding-bottom 5px
  letter-spacing 1px
  transition .33s
  border-bottom 1px solid transparent
  &:focus
    outline 0
  &:hover
    color #ffd633
  &.active
    color #ffd633
    border-bottom 1px solid
.button
  background-color #ffd633
  color #333
  padding 15px
  font-size 17px
  border-radius 3px
  transition .33s
  &:hover
    background #ee3942
    color #fff
  &:focus
    background #4d3eff
    color #fff
    outline 0
.main
  position relative
  min-height 100vh
  max-height max-content
  &:before
    content ''
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    background-image url('../images/wallpaper.jpg')
    background-size cover
    background-attachment fixed
    filter blur(10px)
  &:after
    content ''
    background rgba(238, 57, 66, 0.26)
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    z-index 1
.initial-screen
  .wrap
    position relative
    z-index 2
    padding-top 150px
    h1
      font-size 100px
      font-weight 700
      color #fff
      span
        font-weight 300
    p
      color #fff
      font-size 20px
      max-width 90%
      margin-top 20px
      line-height 24px
    .kudaGo-form
      margin-top 20px
      input[type='text']
        padding 20px
        border-radius 4px
        width 100%
        margin-bottom 10px
      span
        color #fff
        margin 0 10px 0 20px
        font-size 18px
      button
        margin-right 3px
        &:last-child
          margin-right 0
        &.active
          background #ee3942
          color #fff

.section
  position relative
  z-index 2
  margin-top 60px
  .notfavorites
    color #fff
    text-align center
    font-size 21px
.kudaGo-event
  background #fff
  margin-bottom 15px
  align-items center
  justify-content space-between
  padding 10px 20px
  border-radius 5px
  .button
    &.favorite
      background #ee3942
      color #fff
@import 'inc/reset.styl'
